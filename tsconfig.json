{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom"],
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@interfaces/*": ["interfaces/*"],
      "@services/*": ["services/*"]
    },
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  }
}
